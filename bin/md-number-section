#!/usr/bin/env python3

import re
import sys


def semver_add_by_index(old, num, index):
    s = old.split(".")
    while index >= len(s):
        s.append("0")
    s[index] = str(int(s[index]) + num)
    for i in range(index + 1, len(s)):
        s[i] = "0"

    # trim last "0"
    while s[-1] == "0":
        s.pop()

    return ".".join(s)


def main():
    file = sys.argv[1]
    status = "NORMAL"  # type: 'NORMAL' | 'CODE_BLOCK'
    last_ver = "0"
    new_content = ""
    with open(file) as f:
        for line in f:
            add_line = line
            if status == "NORMAL":
                if line.startswith("```"):
                    status = "CODE_BLOCK"
                elif line.startswith("#"):
                    s = line.split(" ")
                    level = len(s[0])
                    if re.match(r"\d+(\.\d+)*", s[1]):
                        content = " ".join(s[2:])
                    else:
                        content = " ".join(s[1:])
                    last_ver = semver_add_by_index(last_ver, 1, level - 1)
                    add_line = " ".join([s[0], last_ver, content])
            elif status == "CODE_BLOCK":
                if line.startswith("```"):
                    status = "NORMAL"
            new_content += add_line
    with open(file, "w") as f:
        f.write(new_content)


if __name__ == "__main__":
    main()
