{
    "title":"vscode lctrl + i/j to arrow keys",
    "rules":[
        {
            "description":"vscode lctrl + i/j to arrow keys",
            "manipulators":[
                {
                    "type":"basic",
                    "from":{
                        "modifiers":{
                            "mandatory":[
                                "left_control"
                            ]
                        },
                        "key_code":"j"
                    },
                    "conditions":[
                        {
                            "type":"frontmost_application_if",
                            "description":"",
                            "bundle_identifiers":[
                                "^com\\.microsoft\\.VSCode$"
                            ]
                        }
                    ],
                    "to":[
                        {
                            "repeat":true,
                            "key_code":"down_arrow"
                        }
                    ]
                },
                {
                    "type":"basic",
                    "from":{
                        "modifiers":{
                            "mandatory":[
                                "left_control"
                            ]
                        },
                        "key_code":"k"
                    },
                    "conditions":[
                        {
                            "type":"frontmost_application_if",
                            "description":"",
                            "bundle_identifiers":[
                                "^com\\.microsoft\\.VSCode$"
                            ]
                        }
                    ],
                    "to":[
                        {
                            "repeat":true,
                            "key_code":"up_arrow"
                        }
                    ]
                }
            ]
        }
    ]
}
